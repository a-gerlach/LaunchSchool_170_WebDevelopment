<form action="/survey/create" method="POST">
  <p>
    <label>ID:
      <input type="text" name="id" value="<%= params[:id] %>" />
    </label>
  </p>
  <p>
    <label>On a scale of 1 to 10. How much do you like Hamburgers?:
      <input type="text" name="ham_scale" value="<%= params[:ham_scale] %>" />
    </label>
  </p>
  <p>
    <label>On a scale of 1 to 10. How much do you like to Exercise?:
      <input type="text" name="exer_scale" value="<%= params[:exer_scale] %>"/>
    </label>
  </p>
  <p>
    <label>How old are you?:
      <input type="text" name="age" value="<%= params[:age] %>" />
    </label>
  </p>
  <button type="submit">Submit</button>
</form>
