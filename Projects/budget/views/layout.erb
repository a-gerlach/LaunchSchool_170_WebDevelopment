<!doctype html>
<html lang="en-US">
  <head>
    <title>Budget App</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <header>
    <h1>Your Expenses for 2016</h1>
    <% if session[:error] %>
      <div class="flash error" style="color:red;">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div>
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>

    </main>

  </body>
</html>
