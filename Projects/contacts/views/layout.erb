<!doctype html>
<html lang="en-US">
  <head>
    <title>Contact App</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <header>
    <h1>Your Contacts</h1>
    <% if session[:error] %>
      <div>
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div>
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>
      
    </main>
  </body>
</html>
